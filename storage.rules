rules_version = '2';

// Craft rules based on your logistics platform needs
service firebase.storage {
  match /b/{bucket}/o {
    
    // Generic match for all files
    match /{allPaths=**} {
      // Allow read/write only if the user is authenticated
      allow read, write: if request.auth != null;
    }

    // Specific folder for Waybills/Documents (Public Read, Admin Write)
    match /documents/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // User-specific uploads (Profile photos, etc.)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}